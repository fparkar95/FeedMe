
<center><div id="home-search-container" style="padding-bottom: 50px;">
<div class="container">

    <section id="content-section" > 
            <h2 class="head-title">Welcome to FeedMe</h2>
            <center><p class="head-message"><strong>FeedMe is a quick and easy app to find some local foods to satisfy your hunger.</strong></p></center>
           <center><p class="head-message"><strong>You can sign in or register to begin your journey to find delicious meals and leave your reviews.</strong></p></center>
           

    </section>
    
    
        <%= link_to "Write a Review", new_restaurant_path, class: "button; btn btn-primary btn-lgbtn3d" %>  
    

     
     <section>
     <div class="container" style="padding-bottom: 50px; padding-top: 50px;">
         <div class="search-form">
             <p><strong>Search for Food</strong></p>
             <%= form_tag search_restaurants_path, method: :get do |f| %>
                 <%= text_field_tag :search , nil, placeholder: "burgers, sushi, noodles, etc."%>
                 <%= text_field_tag :location , nil, placeholder: "Downtown, Burnaby, North Vancouver, etc."%>
                 <%= select_tag :cuisine, options_for_select(Cuisine.all.map{ |c| [c.name, c.id]}) %> <br />
                 <%= submit_tag  'Find Me Food', class: "button; btn btn-primary btn-lgbtn3d" %>
             <% end %>
         </div>
         
     </div>
     	<!-- Begin Carousel -->
        		<div class="row">
        		    <div id="realto-carousel" class="carousel slide span12">
        			    <div class="carousel-navigation pull-right">
        			    	<a class="serif italic pull-left view-all-carousel" href="#">View all</a>
        			    	<a class="left carousel-control pull-left" href="#realto-carousel" data-slide="prev">‹</a>
        			    	<a class="right carousel-control pull-right" href="#realto-carousel" data-slide="next">›</a>
        			    </div>
        		        <div class="carousel-inner">
        		          	<div class="item active">
        		                <ul class="thumbnails">
        		                    <% @restaurants.last(3).each do |restaurant| %>
        		                    <li class="span4 box-container">
        		                    	<div class="holder">
        		                            <a class="overlay" title="property title" href="#">
        		                            	<span class="more"></span>
        		                            	<%= link_to image_tag("https://placehold.it/370x210"), restaurant %>
        		                            </a>
        		                            <% if restaurant.reviews.present? %>
        		                                <span class="prop-tag star-rating" data-score=<%= restaurant.reviews.average(:rating).round(2) %>></span>
        		                            <% else %>
        		                              <span class="prop-tag">No review yet!</span>
        		                              <% end %>
        		                                
        		                            <div class="prop-info">
        		                                <h3 class="prop-title"><%= link_to restaurant.name, restaurant %></h3>
        		                                <ul class="more-info clearfix">
        		                                    <li class="info-label clearfix"><span class="pull-left">Location:</span> 
        		                                    <span class="qty pull-right"><%= restaurant.city %>, <%= restaurant.state %></span></li>
        		                                    <li class="info-label clearfix"><span class="pull-left">Cuisine:</span> 
        		                                    <span class="qty pull-right"><%= restaurant.cuisine.name %></span></li>
        		                                </ul>
        		                            </div>
        		                        </div>
        		                    </li>
        		                    <% end %>
     </section>
<!-- .span8  -->


<!-- .span4  -->
</div>
</div>


